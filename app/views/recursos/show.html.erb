<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Lista", recursos_path %></li>
      <li><%= link_to "Novo", new_recurso_path %></li>
      <li class="active"><%= link_to "Consultar", recurso_path %></li>
    </ul>
  </div>
  
  <div class="content">
    <div class="inner">
      <p>
        <b>Código:</b>
        <%= @recurso.id %>
      </p>

      <p>
        <b>Nome:</b>
        <%= @recurso.nome %>
      </p>

      <p>
        <b>Observação:</b>
        <%= simple_format @recurso.observacao %>
      </p>

      <p>
        <b>Usuário:</b>
        <%= @recurso.usuario.nome_completo.titleize %>
      </p>
      
      <div class="wat-cf">
        <%= link_to image_tag("editar.png", alt: "Editar") + " Editar", edit_recurso_path(@recurso), class: "button" %>
        <%= link_to image_tag("excluir.png", alt: "Excluir") + " Excluir", recurso_path(@recurso),
          method: "delete", class: "button", confirm: 'Você realmente deseja excluir este recurso?' %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>
