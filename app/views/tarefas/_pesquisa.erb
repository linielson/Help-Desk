<div class="block">
  <div class="content">
    <h2 class="title">Pesquisa</h2>
    <div class="inner">

    <%= form_tag tarefas_path, method: :get, class: :form do %>

      <div>
        <div class="group" style="float:left; width: 82px;">
          <%= label_tag "", "Código", class: :label %>
          <%= number_field_tag 'scodigo', nil, in: 1...5000, step: false %>
        </div>

        <div class="group" style="float:left; width: 130px;">
          <%= label_tag "", "Status", class: :label %>
          <%= select_tag "sstatus", options_for_select([["Todos", ""], ["Aberta", "A"], ["Em andamento", "E"], ["Concluída", "C"]])%>
        </div>

        <div class="group" style="float:left; width: 150px;">
          <%= label_tag "", "Técnico", class: :label%>
          <%= select_tag "stecnico", options_from_collection_for_select(@tecnicos, :id, :nome_completo), prompt: 'Todos' %>
        </div>

        <div class="group">
          <%= label_tag "", "Cliente", class: :label %>
          <%= select_tag "scliente", options_from_collection_for_select(@clientes, :id, :nome), prompt: 'Todos' %>
        </div>

      </div>

      <div>
        <div class="group" style="float:left; width: 213px;">
          <%= label_tag "", "Emissão Inicio", class: :label %>
          <%= date_select("emissao_inicio", "data", options = {
            order: [:day, :month, :year],
            start_year: 2012,
            end_year: Time.now.year,
            prompt: {day: 'Dia', month: 'Mês', year: 'Ano'},
            class: 'date_select' }) %>
        </div>

        <div class="group">
          <%= label_tag "", "Fim", class: :label %>
          <%= date_select("emissao_fim", "data", options = {
            order: [:day, :month, :year],
            start_year: 2012,
            end_year: Time.now.year,
            prompt: {day: 'Dia', month: 'Mês', year: 'Ano'},
            class: 'date_select' }) %>
        </div>
      </div>

      <div>
        <div class="group" style="float:left; width: 213px;">
          <%= label_tag "", "Entrega Inicio", class: :label %>
          <%= date_select("entrega_inicio", "data", options = {
            order: [:day, :month, :year],
            start_year: 2012,
            end_year: Time.now.year,
            prompt: {day: 'Dia', month: 'Mês', year: 'Ano'},
            class: 'date_select'}) %>
         </div>

        <div class="group">
          <%= label_tag "", "Fim", class: :label %>
          <%= date_select("entrega_fim", "data", options = {
            order: [:day, :month, :year],
            start_year: 2012,
            end_year: Time.now.year,
            prompt: {day: 'Dia', month: 'Mês', year: 'Ano'},
            class: 'date_select'}) %>
        </div>
      </div>

      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("pesquisar.png") %> Pesquisar
        </button>
      </div>

    <% end %>

    </div>
  </div>
</div>