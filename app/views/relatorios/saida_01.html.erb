<div class="block">
  <div class="content">
    <h2 class="title">01 - Número de atendimentos por técnico</h2>
    <div class="inner">
      
      <b>Período:</b> <%= l @data_inicio %> até <%= l @data_fim %><br />
      <b>Técnico:</b> <%= @tecnico_nome %><br />
      <b>Solicitante:</b> <%= @cliente_nome %><br />
      <b>Serviço:</b> <%= @servico_nome %>
      <br />
      <br />
      
      <table class="table">
        <tr>
          <th class="first" style="width: 200px">Técnico</th>
          <th>No período</th>
          <th>Há um mês</th>
          <th>Há um ano</th>
        </tr>
        <% total_atual = 0 %>
        <% total_mes_ant = 0 %>
        <% total_ano_ant = 0 %>
        <% @atendimentos.each do |a| %>
          <tr class="<%= cycle("odd", "even") %>">
            <td><%= a[0].titleize %></td>
            <td><%= a[1] %></td>
            <td><%= a[2] %></td>
            <td><%= a[3] %></td>
          </tr>
          <% total_atual += a[1] %>
          <% total_mes_ant += a[2] %>
          <% total_ano_ant += a[3] %>
        <% end %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><b>Total</b></td>
          <td><b><%= total_atual %></b></td>
          <td><b><%= total_mes_ant %></b></td>
          <td><b><%= total_ano_ant %></b></td>
        </tr>
      </table>

      <br />
      <%= image_tag @grafico, alt: "Número de atendimentos por técnico" %>
      <br />
      <br />

      <div class="wat-cf">
        <%= link_to image_tag("voltar.png", alt: "Voltar") + " Voltar", index_01_path, class: "text_button_padding button" %>
      </div>

    </div>
  </div>
</div>