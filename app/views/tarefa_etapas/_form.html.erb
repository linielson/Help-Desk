  <div class="group">
    <%= f.label :codigo, "Código", class: :label %>
    <%= text_field_tag 'codigo', @tarefa_etapa.codigo, class: :text_field, disabled: true, style: 'width: 50px;' %>
  </div>

  <div class="group">
    <%= f.label :nome, "Nome", class: :label %>
    <%= f.text_field :nome, class: :text_field, style: 'width: 300px;' %>
  </div>

  <div class="group">
    <%= f.label :descricao, "Descrição", class: :label %>
    <%= f.text_area :descricao, rows: 10, class: :text_area %>
  </div>

  <div class="group">
    <%= f.label :tecnico, "Técnico", class: :label %>
    <%= f.collection_select :tecnico_id, @tecnicos, :id, :codigo_nome, prompt: true %>
  </div>

  <div class="group">
    <% @recursos.each do |r| %>
      <%= check_box_tag "tarefa_etapa[recurso_ids][]", r.id, @tarefa_etapa.recursos.include?(r), class: :checkbox %>
      <%= r.nome %><br/>
    <% end %>
  </div>

