<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Lista", tarefa_tarefa_anexos_path(@tarefa)  %></li>
      <li><%= link_to "Novo", new_tarefa_tarefa_anexo_path(@tarefa) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Anexos</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">Anexo</th>
          <th>Descrição</th>
          <th style="width: 100px">&nbsp;</th>
        </tr>
        <% @tarefa_anexos.each do |anexo| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= link_to anexo.titulo.titleize, anexo.documento.url, target: "_blank" %></td>
          <td><%= truncate anexo.descricao %></td>
          <td class="last">
            <%= link_to image_tag("editar.png", alt: "Editar", title: "Editar"), edit_tarefa_tarefa_anexo_path(@tarefa, anexo) %>
            <%= link_to image_tag("excluir.png", alt: "Excluir", title: "Excluir"), tarefa_tarefa_anexo_path(@tarefa, anexo), confirm: 'Você realmente deseja excluir este anexo?', method: :delete %>
          </td>
        </tr>
        <% end %>
      </table>
      
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        <%= will_paginate @tarefa_anexos  %>
      </div>

      <div class="group navform wat-cf">
        <%= link_to image_tag("voltar.png", alt: "Voltar") + " Voltar", tarefas_path, class: "text_button_padding button" %>
      </div>

    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>
