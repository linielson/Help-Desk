<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Lista", usuarios_path %></li>
      <li><%= link_to "Novo", new_usuario_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Usuários</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"></th>
          <th>Tipo</th>
          <th>Nome</th>
          <th>E-mail</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @usuarios.each do |usuario| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= gravatar_image_tag usuario.email %></td>
          <td><%= usuario.tipo_usuario %></td>
          <td><%= usuario.nome_completo.titleize %></td>
          <td><%= usuario.email %></td>
          <td class="last">
            <%= link_to image_tag("editar.png", alt: "Editar", title: "Editar"),
              edit_usuario_path(usuario) %>
            <% if current_usuario == usuario %>
              <%= image_tag("excluir_d.png", alt: "Excluir", title: "Excluir") %>
            <% else %>
              <%= link_to image_tag("excluir.png", alt: "Excluir", title: "Excluir"), usuario,
                confirm: 'Você realmente deseja excluir este usuário?', method: :delete %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"> </div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>
