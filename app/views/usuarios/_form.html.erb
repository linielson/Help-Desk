  <div class="group">
    <%= f.label :nome_completo, "Nome", class: :label %>
    <%= f.text_field :nome_completo, class: :text_field, style: 'width: 300px;' %>
  </div>

  <div class="group">
    <%= f.label :email, "E-mail", class: :label %>
    <%= f.text_field :email, class: :text_field, style: 'width: 300px;' %>
  </div>

  <div class="group">
    <%= f.label :tipo, "Tipo", class: :label %>
    <%= f.select :tipo, ([["Administrador", "A"], ["Gerente", "G"], ["Técnico", "T"]])%>
  </div>

  <div class="group">
    <%= f.label :password, "Senha", class: :label %>
    <%= f.password_field :password, class: :text_field, style: 'width: 300px;' %>
  </div>

  <div class="group">
    <%= f.label :password_confirmation, "Confirmação", class: :label %>
    <%= f.password_field :password_confirmation, placeholder: "confirmação da senha",
      class: :text_field, style: 'width: 300px;' %>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("ok.png", alt: "Salvar") %> Salvar
  </button>
  <%= link_to "Cancelar", usuarios_path, class: "text_button_padding link_button" %>
</div>
