<h1>Help Desk</h1>
<div class="block" id="block-login">
  <h2>Esqueceu sua senha?</h2>
  <div class="content login">

    <br />

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form login"}) do |f| %>

      <div class="group">
        <%= f.label :email, "E-mail", class: :label %>
        <%= f.text_field :email, class: :text_field, style: 'width: 300px;' %>
      </div>

      <br />

      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("email_go.png", alt: "Redefinir") %> Redefinir
        </button>

        <%= link_to "Cancelar", new_usuario_session_path, class: "text_button_padding link_button" %>
      </div>

    <% end %>

  </div>
</div>