<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Lista", tarefa_tarefa_horas_path(@tarefa) %></li>
      <li><%= link_to "Novo", new_tarefa_tarefa_hora_path(@tarefa) %></li>
    </ul>
  </div>
  
  <div class="content">
    <h2 class="title">Horas</h2>

    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">Data</th>
          <th>Inicio</th>
          <th>Fim</th>
          <th>Técnico</th>
          <th>Etapa</th>
          <th style="width: 100px">&nbsp;</th>
        </tr>
        <% @tarefa_horas.each do |hora| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= l hora.data %></td>
          <td><%= l hora.inicio %></td>
          <td><%= l hora.fim %></td>
          <td><%= hora.tecnico.nome_completo.titleize %></td>
          <td><%= hora.etapa.codigo_nome.titleize %></td>
          <td class="last">
            <%= link_to image_tag("editar.png", alt: "Editar", title: "Editar"), edit_tarefa_tarefa_hora_path(@tarefa, hora) %>
            <%= link_to image_tag("excluir.png", alt: "Excluir", title: "Excluir"),
              tarefa_tarefa_hora_path(@tarefa, hora), confirm: 'Você realmente deseja excluir este período?', method: :delete %>
          </td>
        </tr>
        <% end %>
      </table>
      
      <div class="actions-bar wat-cf">
        <div class="actions"> </div>
        <%= will_paginate @tarefa_horas %>
      </div>

      <div class="group navform wat-cf">
        <%= link_to image_tag("voltar.png", alt: "Voltar") + " Voltar", tarefas_path, class: "text_button_padding button" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>
