<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Lista", servico_servico_etapas_path(@servico) %></li>
      <li><%= link_to "Novo", new_servico_servico_etapa_path(@servico) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Etapas do Serviço</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first" style="width: 200px">Nome</th>
          <th>Descrição</th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @servico_etapas.each do |etapa| %>
          <tr class="<%= cycle("odd", "even") %>">
            <td><%= link_to etapa.nome.titleize, servico_servico_etapa_path(@servico, etapa) %></td>
            <td><%= truncate etapa.descricao, length: 75 %></td>

            <td class="last">
              <%= link_to image_tag("consultar.png", alt: "Consultar", title: "Consultar"),
                servico_servico_etapa_path(@servico, etapa) %>
              <%= link_to image_tag("editar.png", alt: "Editar", title: "Editar"),
                edit_servico_servico_etapa_path(@servico, etapa) %>
              <%= link_to image_tag("excluir.png", alt: "Excluir", title: "Excluir"),
                servico_servico_etapa_path(@servico, etapa),
                confirm: 'Você realmente deseja excluir esta etapa?', method: :delete %>
            </td>
          </tr>
        <% end %>

      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @servico_etapas %>
      </div>

      <div class="group navform wat-cf">
        <%= link_to image_tag("voltar.png", alt: "Voltar") + " Voltar",
          servicos_path, class: "text_button_padding button" %>
      </div>

    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>