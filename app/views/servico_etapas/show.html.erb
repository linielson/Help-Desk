<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Lista", servico_servico_etapas_path %></li>
      <li><%= link_to "Novo", new_servico_servico_etapa_path %></li>
      <li class="active"><%= link_to "Consultar", servico_servico_etapa_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      <p>
        <b>Nome:</b>
        <%= @servico_etapa.nome.titleize %>
      </p>

      <p>
        <b>Descrição:</b>
        <%= simple_format @servico_etapa.descricao %>
      </p>

      <% if @servico_etapa.recursos.present? %>
        <p>
          <b>Recursos</b>
          <% @servico_etapa.recursos.each do |r| %>
            <li><%= r.nome.titleize %></li>
          <% end %>
        </p>
      <% end %>

      <div class="wat-cf">
        <%= link_to image_tag("editar.png", alt: "Editar") + " Editar",
          edit_servico_servico_etapa_path(@servico, @servico_etapa), class: "button" %>
        <%= link_to image_tag("excluir.png", alt: "Excluir") + " Excluir",
          servico_servico_etapa_path(@servico, @servico_etapa), method: "delete",
          class: "button", confirm: 'Você realmente deseja excluir esta etapa?' %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>