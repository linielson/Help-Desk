  <div class="group">
    <%= f.label :nome, "Nome", class: :label %>
    <%= f.text_field :nome, class: :text_field, style: 'width: 300px;' %>
  </div>

  <div class="group">
    <%= f.label :descricao, "Descrição", class: :label %>
    <%= f.text_area :descricao, rows: 10, class: :text_area %>
  </div>

  <div class="group">
    <% @recursos.each do |r| %>
      <%= check_box_tag "servico_etapa[recurso_ids][]", r.id, @servico_etapa.recursos.include?(r), class: :checkbox %>
      <%= r.nome %><br/>
    <% end %>
  </div>
 
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("ok.png", alt: "Salvar") %> Salvar
  </button>
  <%= link_to "Cancelar", servico_servico_etapas_path, class: "text_button_padding link_button" %>
</div>
