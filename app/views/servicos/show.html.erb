<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "Lista", servicos_path %></li>
      <li><%= link_to "Novo", new_servico_path %></li>
      <li class="active"><%= link_to "Consultar", servico_path %></li>
    </ul>
  </div>
  
  <div class="content">
    <div class="inner">
      <p>
        <b>Código:</b>
        <%= @servico.id %>
      </p>

      <p>
        <b>Nome:</b>
        <%= @servico.nome %>
      </p>

      <p>
        <b>Descrição:</b>
        <%= @servico.descricao %>
      </p>

      <p>
        <b>Usuário:</b>
        <%= @servico.usuario.nome_completo.titleize %>
      </p>

      <hr/>

      <div class="group navform wat-cf">
        <h3>Etapas</h3>

        <%= render "servico_etapas/etapas", etapas: @servico.servico_etapas.order('id ASC') %>
      </div>

      <p> </p>

      <div class="wat-cf">
        <%= link_to image_tag("editar.png", alt: "Editar") + " Editar", edit_servico_path(@servico), class: "button" %>
        <%= link_to image_tag("excluir.png", alt: "Excluir") + " Excluir", servico_path(@servico), method: "delete",
          class: "button", confirm: 'Você realmente deseja excluir este serviço?' %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(partial: 'sidebar') %>
